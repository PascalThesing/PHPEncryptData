#!/bin/bash

CD=`pwd`;
WD="`/usr/bin/dirname $0`/../../";

echo "Changing to working directory: $WD";
cd $WD;

if [ -z $1 ]; then
	TARGET="";
else
	TARGET="$1";
fi

if [ -z $2 ]; then
    FILTER="";
else
	FILTER="--filter $2";
fi

REALPATH="$CD/$TARGET";

if [ -z $1 ] && [ -z $2 ]; then
    REALPATH="";
    FILTER="--testsuite All";
fi

echo "Testing: $REALPATH $FILTER";

PHPCrypt/vendor/bin/phpunit -c PHPCrypt/phpunit.xml $FILTER $REALPATH;
